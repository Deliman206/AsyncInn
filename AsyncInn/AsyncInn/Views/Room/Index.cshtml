@using AsyncInn.Models;
@model IEnumerable<AsyncInn.Models.Room>;
@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}
<h1>ROOMS</h1>


<div class="col s12">
    <div class="row">
        <div class="input-field col s7">
            <a asp-action="Create"> Create</a>
        </div>
        <div class="input-field col s4">
            <form asp-controller="Room" asp-action="Index">
                <p>
                    Search: <input type="text" name="SearchString" />
                    <input type="submit" value="Filter" />
                </p>
            </form>
        </div>
        <div class="input-field col s1"></div>
    </div>
</div>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Layout</th>
            <th>Amenities</th>

        </tr>
    </thead>

    <tbody>
        @foreach (Room room in Model)
        {
        <tr>
            <td>@room.ID</td>
            <td>@room.Name</td>
            <td>@room.Layout</td>
            <td>@room.RoomAmenities.Count</td>

            <td>
                <a class="btn waves-effect waves-light" asp-action="Edit" asp-route-id="@room.ID">
                    Edit
                    <i class="material-icons">edit</i>
                </a>
            </td>
            <td>
                <a class="btn waves-effect waves-light" asp-action="Delete" asp-route-id="@room.ID">
                    Delete
                    <i class="material-icons">clear</i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>