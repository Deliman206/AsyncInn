
@model AsyncInn.Models.Room;
@{
    Layout = "_Layout";
}

<h1>ROOMS</h1>
<div class="row">
    <form class="col s12" asp-action="Create">
        <div class="row">
            <div class="input-field col s6">
                <input placeholder="Room Name" asp-for= "Name" type="text">
            </div>
            <div class="input-field col s6">
                <select asp-for="Layout">
                    <option value="" disabled selected>Select Layout</option>
                    <option  value="studio">Studio</option>
                    <option value="oneBedroom">One Bedroom</option>
                    <option value="twoBedRoom">Two Bedrooms</option>
                </select>
            </div>
        </div>
        
        
        <input class="btn waves-effect waves-light" type="submit" value="Submit"/>
    </form>
</div>