
@{Layout = "../Shared/_Layout.cshtml";
}
<h1>HOTELS</h1>
<div class="row">
    <form class="col s12">
        <div class="row">
            <div class="input-field col s12">
                <input placeholder="Hotel Name" id="hotelname" type="text" >
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input placeholder="City Location" id="city" type="text" >
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input placeholder="State Location" id="state" value="" />
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input placeholder="Phone Number" id="phone" type="number" >
            </div>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">
            Submit
        </button>
    </form>
</div>