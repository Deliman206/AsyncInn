@using AsyncInn.Models;
@model IEnumerable<AsyncInn.Models.Hotel>;
@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}
<h1>HOTELS</h1>


<div class="col s12">
        <div class="row">
            <div class="input-field col s7">
                <a asp-action="Create"> Create</a> 
            </div>
            <div class="input-field col s4">
                <form asp-controller="Hotel" asp-action="Index">
                    <p>
                        Search: <input type="text" name="SearchString"/>
                        <input type="submit" value="Filter" />
                    </p>
                </form>
            </div>
            <div class="input-field col s1"></div>
        </div>
</div>



<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>City</th>
            <th>Phone Number</th>

        </tr>
    </thead>

    <tbody>
        @foreach (Hotel hotel in Model)
        {
            <tr>
                <td>@hotel.ID</td>
                <td>@hotel.Name</td>
                <td>@hotel.City</td>
                <td>@hotel.Phone</td>
                <td>
                    <a class="btn waves-effect waves-light" asp-action="Edit" asp-route-id="@hotel.ID">
                        Edit
                        <i class="material-icons">edit</i>
                    </a>
                </td>
                <td>
                    <a class="btn waves-effect waves-light" asp-action="Delete" asp-route-id="@hotel.ID">
                        Delete
                        <i class="material-icons">clear</i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>