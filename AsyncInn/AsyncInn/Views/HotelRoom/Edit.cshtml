@model AsyncInn.Models.HotelRoom;
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit";
}
<h1>HOTEL ROOMS</h1>
<div class="row">
    <form class="col s12" asp-action="Edit" method="post">
        <div class="row">
            <div class="input-field col s6">
                <select asp-for="@Model.HotelID" asp-items="ViewBag.Hotels"></select>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <select asp-for="@Model.RoomID" asp-items="ViewBag.Rooms"></select>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input placeholder="Room Number" type="text" asp-for="@Model.RoomNumber">
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input placeholder="Rate" type="text" asp-for="@Model.Rate">
            </div>
        </div>
        <input class="btn waves-effect waves-light" type="submit" value="Submit" />
    </form>
</div>